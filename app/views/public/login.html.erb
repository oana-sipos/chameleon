<div class="col-md-8 col-md-offset-2">
	<h1>Welcome to Chameleon Girls!</h1>
	<h2>Login to see girls change their colour to blend into their environment.</h2>

	<%= form_tag action:'authenticate' do %>
		Email: <%= text_field_tag :email %>
		<br/>
		Password: <%= password_field_tag :password %>
		<br/>
		<%= submit_tag 'Login' %>
	<% end %>

	<div class="col-md-4 col-md-offset-4">
	No account? 
	<%= button_to 'Create free account', new_user_path, class: 'btn btn-success', method: 'get', action:'create', controller:'public' %>
	<br \>
	No time for signup forms? 
	<%= button_to 'Sign in via Facebook', auth_facebook_callback_path, class: 'btn btn-success', method: 'get' %>
	</div>
</div>